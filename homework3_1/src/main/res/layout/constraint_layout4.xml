<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewSpan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:text="@string/android"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <ImageView
        android:id="@+id/imageView_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/square"
        android:contentDescription="@string/photo"
        app:layout_constraintTop_toBottomOf="@id/textViewSpan"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_posts"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:text="@string/posts"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/imageView_1"
        app:layout_constraintTop_toBottomOf="@id/textViewSpan"/>

    <TextView
        android:id="@+id/text_followers"
        android:layout_height="50dp"
        android:layout_width="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/followers"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/text_posts"
        app:layout_constraintTop_toBottomOf="@id/textViewSpan"/>

    <TextView
        android:id="@+id/text_following"
        android:layout_height="50dp"
        android:layout_width="70dp"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:text="@string/following"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSpan"/>

    <TextView
        android:id="@+id/text_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:text="@string/userName"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:text="@string/address"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/text_userName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/editText_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/text_address"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imageView_2_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/square"
        android:contentDescription="@string/posts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_description"/>

    <ImageView
        android:id="@+id/imageView_2_2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/square"
        android:layout_marginStart="15dp"
        android:contentDescription="@string/posts"
        app:layout_constraintStart_toEndOf="@id/imageView_2_1"
        app:layout_constraintTop_toBottomOf="@id/editText_description"/>

    <ImageView
        android:id="@+id/imageView_2_3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/square"
        android:layout_marginStart="15dp"
        android:contentDescription="@string/posts"
        app:layout_constraintStart_toEndOf="@id/imageView_2_2"
        app:layout_constraintTop_toBottomOf="@id/editText_description"/>

    <ImageView
        android:id="@+id/imageView_2_4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/square"
        android:layout_marginStart="15dp"
        android:contentDescription="@string/posts"
        app:layout_constraintStart_toEndOf="@id/imageView_2_3"
        app:layout_constraintTop_toBottomOf="@id/editText_description"/>

    <ImageView
        android:id="@+id/imageView_2_5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/square"
        android:layout_marginStart="15dp"
        android:contentDescription="@string/posts"
        app:layout_constraintStart_toEndOf="@id/imageView_2_4"
        app:layout_constraintTop_toBottomOf="@id/editText_description"/>

    <ImageView
        android:id="@+id/imageView_2_6"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/square"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/posts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_description"/>

    <Button
        android:id="@+id/imageButton_direction"
        style="@style/DefaultButtonAppearance"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:drawableTop="@drawable/ic_baseline_directions_24"
        android:text="@string/directions"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/imageView_2_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/imageButton_call"
        style="@style/DefaultButtonAppearance"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:drawableTop="@drawable/ic_baseline_call_24"
        android:text="@string/call"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toEndOf="@id/imageButton_direction"
        app:layout_constraintTop_toBottomOf="@id/imageView_2_2"/>

    <Button
        android:id="@+id/imageButton_save"
        style="@style/DefaultButtonAppearance"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:drawableTop="@drawable/ic_baseline_star_24"
        android:text="@string/save"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toEndOf="@id/imageButton_call"
        app:layout_constraintTop_toBottomOf="@id/imageView_2_4"/>

    <Button
        android:id="@+id/imageButton_website"
        style="@style/DefaultButtonAppearance"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:drawableTop="@drawable/ic_baseline_insert_link_24"
        android:text="@string/call"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toEndOf="@id/imageButton_save"
        app:layout_constraintTop_toBottomOf="@id/imageView_2_6"/>

    <ImageView
        android:id="@+id/imageView_3_1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/square"
        android:contentDescription="@string/posts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/imageView_3_2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/square"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/posts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageView_3_3"/>

    <ImageView
        android:id="@+id/imageView_3_3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/square"
        android:contentDescription="@string/posts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>