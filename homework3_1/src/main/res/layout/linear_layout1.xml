<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewSpan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/poi"
        android:background="@color/darkCyan"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:contentDescription="@string/attractions"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/ic_baseline_folder_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center|start"
            android:text="@string/attractions"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_local_dining_24"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dining"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center|start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_school_24"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/education"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center|start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_group_24"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/family"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center|start" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_favorite_24"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/health"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center|start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_business_24"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/office"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center|start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/promotions"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center|start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_radio_24"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/radio"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center|start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_book_24"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/recipes"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center|start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_directions_bike_24"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/sports"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:gravity="center|start" />

    </LinearLayout>


</LinearLayout>
