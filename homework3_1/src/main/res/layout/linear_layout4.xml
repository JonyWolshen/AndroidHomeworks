<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewSpan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:text="@string/android"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <LinearLayout
        android:id="@+id/linearLayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/photo"
            android:src="@drawable/square" />

        <TextView
            android:id="@+id/text_posts"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/posts"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_followers"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/followers"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_following"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/following"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:text="@string/userName"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:text="@string/address"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/editText_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="start"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linearLayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_2_1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:contentDescription="@string/posts"
            android:src="@drawable/square" />

        <ImageView
            android:id="@+id/imageView_2_2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/posts"
            android:src="@drawable/square" />

        <ImageView
            android:id="@+id/imageView_2_3"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/posts"
            android:src="@drawable/square" />

        <ImageView
            android:id="@+id/imageView_2_4"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/posts"
            android:src="@drawable/square" />

        <ImageView
            android:id="@+id/imageView_2_5"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/posts"
            android:src="@drawable/square" />

        <ImageView
            android:id="@+id/imageView_2_6"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/posts"
            android:src="@drawable/square" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/imageButton_direction"
            style="@style/DefaultButtonAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_directions_24"
            android:text="@string/directions"
            android:textColor="@color/purple_700" />

        <Button
            android:id="@+id/imageButton_call"
            style="@style/DefaultButtonAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_call_24"
            android:text="@string/call"
            android:textColor="@color/purple_700" />

        <Button
            android:id="@+id/imageButton_save"
            style="@style/DefaultButtonAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_star_24"
            android:text="@string/save"
            android:textColor="@color/purple_700" />

        <Button
            android:id="@+id/imageButton_website"
            style="@style/DefaultButtonAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_insert_link_24"
            android:text="@string/call"
            android:textColor="@color/purple_700" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_3_1"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/posts"
            android:src="@drawable/square" />

        <ImageView
            android:id="@+id/imageView_3_2"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/posts"
            android:src="@drawable/square" />

        <ImageView
            android:id="@+id/imageView_3_3"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/posts"
            android:src="@drawable/square" />

    </LinearLayout>

</LinearLayout>