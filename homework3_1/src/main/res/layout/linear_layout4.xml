<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewSpan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingTop="13dp"
        android:gravity="start"
        android:text="@string/android"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/square"
            android:layout_marginStart="20dp"/>


        <FrameLayout

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <ImageButton
                android:id="@+id/image_posts"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/posts"
                android:layout_gravity="center|start"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/ic_baseline_lens_24" />

            <TextView
                android:id="@+id/text_posts"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|start"
                android:gravity="center"
                android:layout_marginStart="20sp"
                android:textSize="14sp"
                android:text="@string/posts"
                android:maxLines="2"/>

        </FrameLayout>

        <FrameLayout

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <ImageButton
                android:id="@+id/image_followers"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/followers"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/ic_baseline_lens_24" />

            <TextView
                android:id="@+id/text_followers"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="20sp"
                android:textSize="14sp"
                android:text="@string/followers"
                android:maxLines="2"/>

        </FrameLayout>

        <FrameLayout

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <ImageButton
                android:id="@+id/image_following"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/following"
                android:layout_gravity="center|start"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/ic_baseline_lens_24" />

            <TextView
                android:id="@+id/text_following"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center|start"
                android:gravity="center"
                android:layout_marginStart="20sp"
                android:textSize="14sp"
                android:text="@string/following"
                android:maxLines="2"/>

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingTop="15dp"
        android:gravity="start"
        android:text="@string/userName"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingTop="13dp"
        android:gravity="start"
        android:text="@string/address"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/editText_description"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:gravity="start"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/square"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/square"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/square"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/square"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/square"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/square"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton_direction"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/directions"

                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/ic_baseline_directions_24"/>

            <TextView
                android:id="@+id/textView_directions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"

                android:text="@string/directions"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>









</LinearLayout>









</LinearLayout>